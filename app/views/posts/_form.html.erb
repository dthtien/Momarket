<%= simple_form_for  post do  |f| %>
  <%= f.input :title %>

  <div id="products">
  <h3>Product</h3>
    <%= render "products/field", f: f, index: nil %>
  </div>

<div id="Add-products">
  <%= link_to "Add more product", new_product_path, remote: true, 
    class: "btn btn-info", data: {params: {index: post.products.size}},
    id: 'add-more-product' %>
</div>
<br>
<div class="Submit">
  <%= f.button :submit, class: 'btn btn-success' %>
</div>
<% end %>