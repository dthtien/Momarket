<h3>
  <%= link_to post.title, post %>
</h3>
  <% if post.owned_by? current_user %>
    <span class = 'actions'>
      <%= link_to "Edit", edit_post_path(post),
        class: "btn btn-info" %>
      <%= link_to "Delete", post, data: { confirm: 'Are you sure to delete this post'} , method: :delete,
        class: 'btn btn-danger' %>
    </span>
  <% end %>
 <%= render post.products %>